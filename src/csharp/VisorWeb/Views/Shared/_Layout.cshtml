<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VisorWeb</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bulma/css/bulma.min.css" />
    <link rel="stylesheet" href="~/lib/bulma/css/bulma-timeline.min.css" />
    <link rel="stylesheet" href="~/lib/bulma/css/bulma-steps.min.css" />

    <script src="~/lib/jquery/jquery.min.js"></script>

    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap4.min.js"></script>
    <link href="~/lib/datatables/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

    <script src="~/lib/Chart.js/Chart.min.js"></script>
</head>
<body>
    <nav class="navbar has-shadow">
        <div class="navbar-brand">
            <a class="navbar-item" href="#">
                <img src="~/assets/logo.png">
            </a>            
        </div>
        <div class="navbar-end">
            <a class="navbar-item" href="https://docs.microsoft.com/en-us/dotnet/csharp/">
                <img src="~/assets/csharp-logo.png">
            </a>
            <a class="navbar-item" href="https://www.arduino.cc/">
                <img src="~/assets/arduino-logo.png">
            </a>
            <a class="navbar-item" href="https://www.mysql.com/">
                <img src="~/assets/mysql-logo.png">
            </a>
        </div>
    </nav>

    <div class="container is-fluid">
        @RenderBody()
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
